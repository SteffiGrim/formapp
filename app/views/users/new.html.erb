<h1>Formulario de Registro</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :full_name, "Nombre Completo" %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Correo Electrónico" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :document_number, "Número de Documento" %>
    <%= form.text_field :document_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone, "Número Telefónico" %>
    <%= form.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, "Dirección" %>
    <%= form.text_area :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comments, "Comentarios" %>
    <%= form.text_area :comments, class: "form-control" %>
  </div>

  <%= form.submit "Enviar", class: "btn btn-primary" %>
<% end %>
